library(tidyverse)
library(gghighlight)

rm(list=ls())

aln <- read.table("./alignment/ersn.bwa.danRer11.aln.stat.txt", header=T)

inv <- read.table("./Lostruct/ersn/ersn.danRer11.ws20.mds1.chr9.ol.txt", header=T)


aln %>% 
  mutate(inv=locus %in% inv$id) %>% 
  group_by(inv) %>% 
  summarize(mean=mean(Fstp))

