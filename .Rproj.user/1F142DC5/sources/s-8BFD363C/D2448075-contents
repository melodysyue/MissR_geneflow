library(tidyverse)
rm(list=ls())
fst <- read.table("./wood.fst", header=T)
head(fst)
table(fst$CHR)

#HMM input format: a file with FST values with a header 'x' by chromosome. 
chr <- unique(fst$CHR)
chr

for (i in chr){
  input <- fst %>% 
    filter(CHR==i) %>% 
    select(FST)
  colnames(input)='x'
  write.table(input, paste0("./HMM_wood/",i,"_fst_wood.txt"), quote=F, row.names=F)
  
}


